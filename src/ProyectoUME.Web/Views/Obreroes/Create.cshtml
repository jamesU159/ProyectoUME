@model ProyectoUME.Core.Domain.Obrero

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Obrero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdObrero" />
            <div class="form-group">
                <label asp-for="NumeroCedula" class="control-label"></label>
                <select asp-for="NumeroCedula" class="form-control" asp-items="ViewBag.NumeroCedula"></select>
                <span asp-validation-for="NumeroCedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre1O" class="control-label"></label>
                <input asp-for="Nombre1O" class="form-control" />
                <span asp-validation-for="Nombre1O" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido1O" class="control-label"></label>
                <input asp-for="Apellido1O" class="form-control" />
                <span asp-validation-for="Apellido1O" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
