@model IEnumerable<ProyectoUME.Core.Domain.Proyecto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroEmpleados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionProyecto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonaResponsable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroEmpleados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionProyecto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonaResponsable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoProyecto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoProyecto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodigoProyecto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
